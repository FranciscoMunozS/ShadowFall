<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <h3>Periodo Prestación</h3>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'Ingresar Nuevo Periodo Prestación', new_period_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<table class="table table-bordered text-center" id="dttb">
  <thead>
    <tr>
      <th>Empleado</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th>Resolución</th>
      <th>Jornada</th>
      <th>Cantidad Días</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.employee.name %></td>
        <td><%= period.start_date %></td>
        <td><%= period.end_date %></td>
        <td><%= period.resolution %></td>
        <td><%= period.working_day %></td>
        <td><%= period.quantity %></td>
        <td>
          <%= link_to period, class: 'btn btn-primary' do %>
            <% icon('fas', 'eye') %>
          <% end %>
          <%= link_to edit_period_path(period), class: 'btn btn-success' do %>
            <% icon('fas', 'edit') %>
          <% end %>
          <%= link_to period, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger' do %>
            <% icon('fas', 'trash') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
