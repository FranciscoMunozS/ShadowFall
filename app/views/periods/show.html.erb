<p id="notice"><%= notice %></p>
<div class="card">
  <p class="card-header">Periodo Prestación</p>

  <div class="card-body">
    <p><strong>Empleado:</strong></p>
    <p><%= @period.employee.name %></p>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <p><strong>Fecha inicio:</strong></p>
        <p><%= @period.start_date %></p>
      </div>
      <div class="col-md-6">
        <p><strong>Fecha termino:</strong></p>
        <p><%= @period.end_date %></p>
      </div>
    </div>
    <hr>
    <p><strong>Resolución:</strong></p>
    <p><%= @period.resolution %></p>
    <hr>
    <p><strong>Jornada:</strong></p>
    <p><%= @period.working_day %></p>
    <hr>
    <p><strong>Cantidad días:</strong></p>
    <p><%= @period.quantity %></p>
    <% if @period.permanences.exists? %>
      <h3>Modificaciones</h3>
      <hr>
      <% @period.permanences.each do |permanence| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Resolución: </strong></p>
                <p><%= permanence.resolution %></p>
              </div>
              <div class="col-md-6">
                <p><strong>Fecha termino: </strong></p>
                <p><%= permanence.end_date.strftime("%d/%m/%Y") %></p>
              </div>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to 'Editar registro', edit_period_path(@period), class: 'btn btn-success' %>
    <%= link_to 'Cancelar', periods_path, class: 'btn btn-secondary' %>
  </div>
</div>
