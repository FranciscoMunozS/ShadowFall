<div class="nested-fields" id="nested-field">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <%= f.input :resolution, label: 'Resolución modificación' %>
        </div>
        <div class="col-md-4">
          <%= f.input :amount, as: :string, label: "Monto" %>
        </div>
        <div class="col-md-4">
          <%= f.input :end_date, as: :string, label: 'Fecha termino', input_html: { class: 'datepicker' } %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to_remove_association f, class: 'btn btn-danger btn-sm' do %>
        <% icon('fas', 'trash-alt', 'Quitar modificación') %>
      <% end %>
    </div>
  </div>
  <br>
</div>
